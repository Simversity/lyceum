from pymongo import MongoClient

HOST = "localhost"
PORT = 2222

client = MongoClient(HOST, PORT)
db = client['BouncerEventsDB']
evtColl = db['eventCollection']

def insertItem(item_dict):
    ts = item_dict.pop('time_stamp')
    found = evtColl.find_one(item_dict)
    if not found:
        item_dict['time_stamp'] = ts
        found = item_dict
    else:
        found['time_stamp'] += ts
        
    evtColl.save(found) 
